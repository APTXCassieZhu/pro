//install ansible
sudo apt update
sudo apt install software-properties-common
sudo apt-add-repository ppa:ansible/ansible
sudo apt update
sudo apt install ansible

// run the playbook
sudo ansible-playbook setup.yml

// when error A278B781FE4B2BDA is missing publickey (only when task:add cassandra debian repository fails)
sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys A278B781FE4B2BDA

// cassandra database set up (stone don't need to do the following!!!)
CREATE KEYSPACE pro WITH replication = {'class':'SimpleStrategy', 'replication_factor' : 3};
CREATE TABLE medias (     
    id text PRIMARY KEY,     
    content blob,    
    type text 
);

sudo ansible-playbook setup.yml